{
  "name": "1000-sabores-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "react-scripts": "5.0.1",
    "sweetalert2": "^11.26.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:karma": "karma start",
    "test:karma:single": "karma start --single-run",
    "test:karma:headless": "karma start --browsers ChromeHeadlessNoSandbox --single-run",
    "test:karma:visual": "karma start karma-visual.conf.js",
    "test:coverage": "karma start --single-run --browsers ChromeHeadlessNoSandbox",
    "eject": "react-scripts eject",
    "server": "node server/index.js",
    "dev": "concurrently \"npm start\" \"npm run server\"",
    "build-and-serve": "npm run build && npm run server",
    "prod": "NODE_ENV=production node server.js",
    "serve": "npm run build && npm run prod"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jasmine-core": "^5.12.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.1.0",
    "karma-spec-reporter": "^0.0.36",
    "karma-webpack": "^5.0.1"
  }
}
